{
  "manifest_version": 3,
  "name": "DopaMind",
  "description": "Track your dopamine levels and improve your focus.",
  "version": "1.0",
  "action": {
    "default_popup": "/src/popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["tabs", "activeTab", "storage", "scripting"],
  "host_permissions": ["<all_urls>"]
}
